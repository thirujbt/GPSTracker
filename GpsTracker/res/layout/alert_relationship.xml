<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/dialog_bg"
    android:paddingBottom="10dp" >
    
    <TextView
        android:id="@+id/alert_relationship_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Relationship"
        android:textColor="#656565"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_below="@+id/alert_relationship_title"
        android:layout_marginTop="2dp"
        android:background="#01c2d4" />

    <TextView
        android:id="@+id/alert_relationship_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_relationship_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Please, select a user relationship to complete a action."
        android:textColor="#656565"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/relationship_spinner"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_relationship_txt"
        android:layout_marginTop="7dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relationship_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/alert_relationship_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/cancel_btn" />

        <Button
            android:id="@+id/alert_relationship_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alert_relationship_cancel_btn"
            android:background="@drawable/ok_btn" />
    </RelativeLayout>

</RelativeLayout>
