<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/profile_img_req_send_page"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/default_image" />

    <TextView
        android:id="@+id/txt_view_req_send_page"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/profile_img_req_send_page"
        android:layout_alignBottom="@+id/profile_img_req_send_page"
        android:textColor="@android:color/black"
        android:text="@string/emptystring"
        android:paddingLeft="5dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/profile_img_req_send_page"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <CheckBox 
        android:id="@+id/req_sent_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>