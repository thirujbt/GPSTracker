<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="5dp" >

    <TextView 
        android:id="@+id/gpstrackerSymbol"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/track_intimate"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        />
    <ImageView
        android:id="@+id/user_profile_img_home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_image" />

    <RelativeLayout
        android:id="@+id/ll_layout2_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_profile_img_home"
        android:layout_alignTop="@id/user_profile_img_home"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/user_profile_img_home"
        
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/centerlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/name_txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:text="@string/name"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/nameColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relationColon"
                android:layout_alignRight="@+id/relationColon"
                android:layout_toRightOf="@id/name_txt_home"
                android:text="@string/_"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/username_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/nameColon"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/emptystring"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/location_txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name_txt_home"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/name_txt_home"
                android:layout_marginBottom="2dp"
                android:text="@string/location"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/locationColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relationColon"
                android:layout_below="@id/name_txt_home"
                android:layout_toRightOf="@id/location_txt_home"
                android:text="@string/_"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/location_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:layout_below="@id/name_txt_home"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/locationColon"
                android:text="@string/emptystring"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/relation_txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name_txt_home"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/location_txt_home"
                android:layout_marginBottom="2dp"
                android:text="@string/relationship"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/relationColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_txt_home"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/relation_txt_home"
                android:text="@string/_"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/relation_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_txt_home"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/relationColon"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/emptystring"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/history_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/user_profile_img_home"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/history" />

    <TextView
        android:id="@+id/more_btn_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/history_btn_home"
        android:layout_alignTop="@id/history_btn_home"
        android:layout_below="@id/user_profile_img_home"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/detail_btn_home"
        android:layout_toRightOf="@+id/history_btn_home"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/date_and_time"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/detail_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/user_profile_img_home"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/details" />

</RelativeLayout>