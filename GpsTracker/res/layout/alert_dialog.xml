<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bgdialog" >

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#656565"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:layout_below="@+id/alert_dialog_title"
        android:layout_marginTop="2dp"
        android:background="#01c2d4" />

    <TextView
        android:id="@+id/alert_dialog_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_dialog_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Alert Msg"
        android:textColor="#656565"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_dialog_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/alert_dialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/cancel_btn_alert"
            android:visibility="gone" />

        <Button
            android:id="@+id/alert_dialog_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alert_dialog_cancel_btn"
            android:background="@drawable/ok_btn_alert" />
    </RelativeLayout>

</RelativeLayout>